{
  "swagger": "2.0",
  "info": {
    "title": "Glycan APIs",
  },
  "host": "api.dev.glygen.org",
  "basePath": "/",
  "produces": ["application/json"],
  "schemes": ["https"],
  "paths": {
        "/directsearch/glycan/?query={query_json}":{
              "get": {
                "tags": [
                    "Glycan Search"
                ],
                "description": "Search for glycan records in GlyGen",
                "parameters": [
                    {
                        "name": "query_json",
                        "in": "path",
                        "description": "Query in JSON format [<a href=\"/apidocs/specs/glycan/search/request.schema.json\" style=\"font-size:11px;text-decoration:none;\" target=_>view schema</a>]",
                        "default":"{\"protein_identifier\":\"P14210\"}",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                     "200": {
                        "description": "Successfully got search results ID",
                        "schema": {
                              "type": "object",
                              "properties": {
                              }
                        }
                     }
                }
            }
        }
        ,"/glycan/detail/{glytoucan_ac}": {
              "get": {
                "tags": [
                    "Glycan Details"
                ],
                "description": "Get details for a given glycan record in GlyGen",
                "parameters": [
                    {
                        "name": "glytoucan_ac",
                        "in": "path",
                        "description": "GlyTouCan Accession",
                        "required": true,
                        "type": "string",
                        "default":"G00053MO"
                      }
                ],
                "responses": {
                     "200": {
                        "description": "Successfully got glycan details",
                        "schema": {
                              "type": "object",
                              "properties": {
                              }
                        }
                     }
                }
            }
        }
        ,"/glycan/image/{glytoucan_ac}": {
              "get": {
                "tags": [
                    "Glycan Image"
                ],
                "description": "Get image for a glycan record in GlyGen",
                "parameters": [
                    {
                        "name": "glytoucan_ac",
                        "in": "path",
                        "description": "GlyTouCan Accession",
                        "required": true,
                        "type": "string",
                        "default":"G00053MO"
                      }
                ],
                "responses": {
                     "200": {
                        "description": "Successfully got glycan image",
                        "schema": {
                              "type": "object",
                              "properties": {
                              }
                        }
                     }
                }
            }
        },
        "/directsearch/protein/?query={query_json}":{
              "get": {
                "tags": [
                    "Protein Search"
                ],
                "description": "Search for protein records in GlyGen",
                "parameters": [
                    {
                        "name": "query_json",
                        "in": "path",
                        "description": "Query in JSON format [<a href=\"/apidocs/specs/protein/search/request.schema.json\" style=\"font-size:11px;text-decoration:none;\" target=_>view schema</a>]",
                        "default":"{\"uniprot_canonical_ac\":\"P14210\"}",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                     "200": {
                        "description": "Successfully got search results ID",
                        "schema": {
                              "type": "object",
                              "properties": {
                              }
                        }
                     }
                }
            }
        }
        ,"/protein/detail/{uniprotkb_ac}": {
              "get": {
                "tags": [
                    "Protein Details"
                ],
                "description": "Get details for a given protein record in GlyGen",
                "parameters": [
                    {
                        "name": "uniprotkb_ac",
                        "in": "path",
                        "description": "UniProtKB Accession",
                        "required": true,
                        "type": "string",
                        "default":"P14210"
                      }
                ],
                "responses": {
                     "200": {
                        "description": "Successfully got protein details",
                        "schema": {
                              "type": "object",
                              "properties": {
                              }
                        }
                     }
                }
            }
        }
    }
}

